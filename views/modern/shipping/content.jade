          label Suche
          md-button.md-icon-button(aria-label='Search', ng-click="checkInput();")
            ng-md-icon(icon='search', size="28")
          //- ng-md-icon(icon='search', size="28")
          input(ng-keyup="checkInputEvent($event)", type="text", ng-model='search')
      md-content(layout-padding, flex)
        md-list
          md-list-item.md-2-line(ng-repeat="product in products", ng-click="showProduct(product, $event)")
